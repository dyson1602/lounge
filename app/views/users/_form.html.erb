<div class="container">
  <% if flash[:errors] %>
    <% flash[:errors].each do |error| %>
      <p><%= error %></p>
    <% end %>
  <% end %>
</div>


  <%= form_for(@user) do |f| %>
    <div class="user-container">
      <div class="row">
        <div class="col s6 offset-s3 z-depth-4 stand_out four-side form-margin">
        <h5 id="form-font" class="center white-text">Signup</h5>
        <div class="input-field">
          <div class="container">
            <%= f.label :user_name %>
            <%= f.text_field :user_name %>
          </div>
        </div>

        <div class="input-field">
          <div class="container">
            <%= f.label :name %>
            <%= f.text_field :name %> 
          </div>
        </div>

        <div class="input-field">
          <div class="container">
            <%= f.label :password %>
            <%= f.password_field :password %>
          </div>
        </div>
        
        <div class="input-field">
          <div class="container">
            <%= f.label :mod %>
            <%= f.number_field :mod %>
          </div>
        </div>

        <div class="input-field">
          <div class="container">
            <%= f.label :bio %>
            <%= f.text_area :bio, class: "materialize-textarea" %>
          </div>
        </div>
        
        <div class="input-field">
          <div class="container">
            <%= f.label :location %>
            <%= f.text_field :location %>
          </div>
        </div>

        <div class="container">
          <a class="btn-flat white waves-effect waves-light btn-margin z-depth-3" style="width: 100%"><i class="material-icons right">send</i><%= f.submit "Signup"%></a>
        </div>
        </div>
      </div>
    </div>

    <% end %>