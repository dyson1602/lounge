<% if flash[:errors] %>
  <% flash[:errors].each do |error| %>
    <p><%= error %></p>
  <% end %>
<% end %>


<%= form_for(@user) do |f| %>
  <%= f.label :user_name %><br>
  <%= f.text_field :user_name %><br>
  <%= f.label :name %><br>
  <%= f.text_field :name %><br>
  <%= f.label :password %><br>
  <%= f.password_field :password %><br>
  <%= f.label :mod %><br>
  <%= f.number_field :mod %><br>
  <%= f.label :bio %><br>
  <%= f.text_area :bio %><br>
  <%= f.label :location %><br>
  <%= f.text_field :location %><br><br>

  <%= f.submit %>
<% end %>