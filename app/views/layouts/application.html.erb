<!DOCTYPE html>
<html>
  <head>
    <title>Lounge</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav>
    
      <li class="nav-item"> 
        <% if @current_user %>
          <%= link_to "Logout", logout_path, method: :delete %>
        <% else %>
          <%= link_to "Login", new_login_path  %>
        <% end %>
      </li>
    </nav>
    <%= yield %>
  </body>
</html>
