<div class="row">
	<div class="col s4 offset-s8">
		<div class="stand_out right-align">
			<h1>Login</h1>
			<% if flash[:error] %>
				<p><%= flash[:error] %></p>
			<% end %>
			<%= form_for :session, url: login_now_path do |f| %>
          <div class="input-field">
            <%= f.label :user_name %><br>
            <%= f.text_field :user_name %><br>
          </div>
          <div class="input-field">
            <%= f.label :password %><br>
            <%= f.password_field :password %><br><br>
          </div>
					<a class="btn-flat btn-small white waves-effect waves-light"><i class="material-icons right">login</i><%=f.submit "Login"%></a>
		      <%= link_to 'Back', login_path, class: "btn-flat btn-small white waves-effect waves-light" %>
			<% end %>
		</div>
	</div>	
</div>