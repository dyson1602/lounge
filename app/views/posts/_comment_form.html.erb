<%= form_for(@comment) do |f| %>
  <%= f.label :user_id %><br>
  <%= f.collection_select :user_id, User.all, :id, :name %><br>
  <%= f.label :user_comment %><br>
  <%= f.text_area :user_comment %><br><br>
  <%= f.hidden_field :post_id, :value => @post.id %>

  <% flash[:post_id] = @post.id %>

  <%= f.submit %>
<% end %>