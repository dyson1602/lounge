<% if flash[:errors] %>
  <% flash[:errors].each do |error| %>
    <p><%= error %></p>
  <% end %>
<% end %>

<%= form_for(@post) do |f| %>
  <%= f.label :title %><br>
  <%= f.text_field :title %><br>
  <%= f.label :user_id %><br>
  <%= f.collection_select :user_id, User.all, :id, :name %><br>
  <%= f.label :content_url %><br>
  <%= f.text_field :content_url %><br>
  <%= f.label :category %><br>
  <%= f.collection_select :category, @categories, :itself, :itself %><br><br>

  <%= f.submit %>
<% end %>