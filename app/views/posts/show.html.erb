<div class="row">
	<div class="col s5">
		<div class="stand_out">
		<h4>Contributor <br>
			<%= link_to @user.name, user_path(@user) %></h4>
		<strong>
			<% if @post.user == @current_user %>
				<%= link_to "Edit Post", edit_post_path(@post) %> - 
				<%= link_to "Delete Post", post_path(@post), method: :delete %>
			<% end %>
		</strong>

		<%= render partial: 'comments/form' %>
		
		<h4>Comments:</h4>
		<% @comments.each do |comment| %>
			<blockquote>
				<p><%= link_to comment.user.name, user_path(comment.user) %> - <%= comment.user_comment %>
					<% if comment.user == @current_user %>
						<%= link_to 'Edit', edit_comment_path(comment) %>
						- <%= link_to 'Delete', comment_path(comment), method: :delete %></p>
					<% end %>
				</blockquote>
			<% end %>
		</div>
	</div>


<% if @post.category == "Articles"%>
	<div class="col s7 right-align">
		<h3><%= link_to @post.title, @post.content_url %></h3>
	</div>
<% elsif @post.category == "Videos"%>
	<div class="col s7 right-align">
		<iframe width="480" height="360" src="<%= @post.extract_embed(@post.content_url) %>" frameborder="0" allowfullscreen></iframe>
	</div>
<% end %>
	
</div>