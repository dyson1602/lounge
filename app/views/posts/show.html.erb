<div class="row">
	<div class="col s5">
		<div class="stand_out">
		<h4>Contributor <%= link_to @user.name, user_path(@user) %></h4>
		<strong>
			<% if @post.user == @current_user %>
				<%= link_to "Edit Post", edit_post_path(@post) %> - 
				<%= link_to "Delete Post", post_path(@post), method: :delete %>
			<% end %>
		</strong>

		<%= render partial: 'comments/form' %>
		
		<h3>Comments:</h3>
		<% @comments.each do |comment| %>
			<blockquote>
				<p><%= link_to comment.user.name, user_path(comment.user) %> - <%= comment.user_comment %>
					<% if comment.user == @current_user %>
						<%= link_to 'Edit', edit_comment_path(comment) %>
						- <%= link_to 'Delete', comment_path(comment), method: :delete %></p>
					<% end %>
				</blockquote>
			<% end %>
		</div>
	</div>

	
</div>